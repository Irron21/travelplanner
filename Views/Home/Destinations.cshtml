@model List<LoginSystem.Models.Destination>

    @{
    ViewData["Title"] = "Destinations";
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Destinations</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <script defer src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <div class="container">
            <h1 class="mt-4">Destinations</h1>

            <table class="table table-bordered mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>Destination ID</th>
                        <th>State/Province</th>
                        <th>City</th>
                        <th>Arrival</th>
                        <th>Departure</th>
                        <th>Activities</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var destination in Model)
                {
                    <tr>
                        <td>@destination.destination_id</td>
                        <td>@destination.dest_state</td>
                        <td>@destination.dest_city</td>
                        <td>@destination.dest_arr.ToString("yyyy-MM-dd")</td>
                        <td>@destination.dest_dept.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (destination.Activities.Any())
                            {
                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Day</th>
                                        <th>Place</th>
                                        <th>Start</th>
                                        <th>End</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in destination.Activities)
                                        {
                                    <tr>
                                        <td>@activity.activity_title</td>
                                        <td>@activity.activity_description</td>
                                        <td>Day @activity.activity_day</td>
                                        <td>@activity.activity_place</td>
                                        <td>@activity.activity_start.ToString("HH:mm")</td>
                                        <td>@activity.activity_end.ToString("HH:mm")</td>
                                    </tr>
                                        }
                                </tbody>
                            </table>
                            }
                            else
                            {
                            <p>No activities planned.</p>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </body>
</html>
