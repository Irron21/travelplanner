@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Itinerary Planner</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script defer src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Welcome to Itinerary Planner!</h1>
        <p>Plan your trips efficiently and explore new adventures with ease.</p>

        @if (User.Identity.IsAuthenticated)
        {
        <form asp-controller="Home" asp-action="SetTrip" method="post">
            <button>New Trip</button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>TRIP NAME</th>
                    <th>TRIP COUNTRY</th>
                    <th>TRIP START</th>
                    <th>TRIP END</th>
                    <th>DETAILS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Trip trip in Model)
                {
                <tr>
                    <td>@trip.trip_name</td>
                    <td>@trip.trip_country</td>
                    <td>@trip.trip_start.ToString("yyyy-MM-dd")</td>
                    <td>@trip.trip_end.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Home" asp-action="Destinations" asp-route-tripId="@trip.trip_id" class="btn btn-primary">
                            View
                        </a>
                    </td>

                </tr>
                }   
            </tbody>
        </table>
        }
</div>
</body>
</html>
